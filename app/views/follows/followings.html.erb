<% provide(:title, "#{@user.name}のフォロー") %>
<div class="whole">
  <div class="main">
    <div class="followings-followers-slide">
      <p>フォロー</p>
      <%= link_to "フォロワー", user_followers_path(@user) %>
    </div>
    <div class="main-container">
      <h3 class="main-container-h3"><%= @user.name %>のフォロー</h3>
      <div class="users">
        <% if @users.exists? %>
          <%= render @users %>
        <% else %>
          <p class="no-follow-message">まだフォローしてません。</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= link_to "＋投稿する", new_post_path, class: "fixed_to_post_link" %>
