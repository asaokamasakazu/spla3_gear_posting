<% provide(:title, "パスワード再設定") %>
<% breadcrumb :users_password_edit %>
<div class="whole">
  <div class="title">
    <div class="title-container">
      <%= breadcrumbs separator: " &rsaquo; " %> 
      <h2>パスワード再設定</h2>
    </div>
  </div>
  <div class="main">
    <div class="main-container">
      <h3 class="main-container-h3">新しいパスワードを入力してください</h3>
      <div class="forms-container">
        <div class="forms">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>
            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <span class="forms-supplement">(<%= @minimum_password_length %>文字以上)</span>
              <% end %><br>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", required: true, minlength: 6, id: "input_pass" %>
            </div>
            <div class="field">
              <%= f.label :password_confirmation %><br>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, minlength: 6, id: "input_pass_confirmation" %>
            </div>
            <div class="checkbox-and-label">
              <p>
                <%= check_box_tag :passview %>
                <%= label_tag :passview, "パスワードを表示する" %>
              </p>
            </div>
            <div class="actions">
              <%= f.submit "パスワードを変更する", class: "hover-transform" %>
            </div>
          <% end %>
        </div>
        <hr class="hr-black"">
        <div class="under-forms">
          <p>パスワードをご存知の場合は、<%= link_to "ログイン", new_user_session_path, class: "link-color-blue hover-textdecoration", "data-turbolinks": false %>してください。</p>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'users/show_password' %>
